<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.share.mapper.CodeMapper">

    <resultMap id="BaseResultMap" type="com.cy.share.pojo.Code">
            <id property="phone" column="phone" />
            <result property="code" column="code" />
    </resultMap>

    <sql id="Base_Column_List">
        uid,code
    </sql>
    <insert id="add">
        INSERT INTO code (phone, code)
        VALUES (#{phone}, #{code});
    </insert>
    <select id="getOne" resultType="java.lang.Boolean">
        SELECT EXISTS (
            SELECT 1
            FROM code c
            WHERE c.code = #{code}
              AND c.phone = #{phone}
        )
    </select>
</mapper>
